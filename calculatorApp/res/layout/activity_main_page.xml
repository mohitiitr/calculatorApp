<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainPageActivity"
    android:background="#FFC2F9" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO THE HOME PAGE"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
           android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/style_calculator"
            android:onClick="createNotification"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:textColor="#2B48FF"
            android:textSize="30sp"
            android:text="Click here to go to calculator through notification" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        android:gravity="center" >

        <Button
            android:id="@+id/btnfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving text to file"
            android:onClick="fileText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the operation you want to do"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnmoveCalculator"
            android:layout_width="229dp"
            android:layout_height="47dp"
            android:background="@drawable/style_calculator"
            android:onClick="calciAct"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:text="CALCULATOR"
            android:textColor="#2B48FF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnmovebenchmark"
            android:layout_width="229dp"
            android:layout_height="47dp"
            android:background="@drawable/style_calculator"
            android:onClick="benchMarkAct"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:text="BENCH MARK"
            android:textColor="#2B48FF"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>